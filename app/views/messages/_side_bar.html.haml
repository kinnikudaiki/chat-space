.side-bar
  .side-bar__user-name
    .side-bar__user-edit
      = current_user.name
      .side-bar__user-edit__name 
      .side-bar__user-edit__icon
        = link_to new_group_path, class:"side-bar__edit" do
          = icon('far', 'edit', class: "icon-edit")

        = link_to edit_user_path(current_user), class:"side-bar__edit" do
          = icon('fa', 'cog', class: "icon")

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group__name 
        = link_to group_messages_path(group) do
          .side-bar__group__message 
            = group.name
          .message
            = group.show_last_message
     
      

